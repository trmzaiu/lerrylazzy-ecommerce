<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Display CRUD</title>
</head>
<body>
    <div class="container mt-3">
        <h2>User Information</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody id="user-table-body">
                <% for (let i=0; i < dataUser.length; i++) { %>
                <tr>
                    <td><%= dataUser[i].Username %></td>
                    <td><%= dataUser[i].Firstname %></td>
                    <td><%= dataUser[i].Lastname %></td>
                    <td><%= dataUser[i].Phone %></td>
                    <td><%= dataUser[i].Email %></td>
                    <td><%= dataUser[i].Address %></td>
                    <td>
                        <a href="/edit-crud?id=<%= dataUser[i].UserID %>" class="btn btn-primary btn-sm">Edit</a>
                        <a href="/delete-crud?id=<%= dataUser[i].UserID %>" class="btn btn-danger btn-sm btn-delete">Delete</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
